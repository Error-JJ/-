.cent_place {
  background-color: #ff4646;
  width: 380rpx;
  height: 380rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  transform: translate(-30%);
  box-shadow: 0px 0px 10px 5px #ffd1d1;
}
.cent_place .cent_btn {
  border: none;
  width: 380rpx;
  height: 380rpx;
  position: absolute;
  border-radius: 50%;
}
.cent_place .cent_pic {
  position: absolute;
  top: 45%;
  left: 40%;
  transform: translate(0, -50%);
  color: #fff;
  font-size: 40px;
}
.cent_place .cent_title {
  position: absolute;
  top: 58%;
  left: 40%;
  color: #fff;
  font-size: 20px;
}
.service_place {
  position: absolute;
  width: 180rpx;
  height: 90rpx;
}
.service_place .mes_pic_place {
  background-color: #f15354;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
}
.service_place .mes_pic_place .mes_pic {
  position: absolute;
  left: 50%;
  top: 50%;
  color: #fff;
  transform: translate(-50%, -50%);
  font-size: 20px;
}
.service_place .mes_title {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(0, -50%);
}
.service_place .q1 {
  background-color: #ffb85c;
}
.service_place .q2 {
  background-color: #38c73f;
}
.service_place .q3 {
  background-color: #5392f1;
}
.service_place .q4 {
