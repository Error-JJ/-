/* pages/service/service.wxss */
page {
  overflow: hidden;
}
.top {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
.top .top_img {
  position: relative;
  top: -180rpx;
  width: 100%;
  height: 1000rpx;
}
.top .title {
  font-size: 20px;
  color: white;
  position: absolute;
  left: 45%;
  top: 4%;
}
.top .top_text {
  font-size: 28rpx;
  color: white;
  position: absolute;
  top: 400rpx;
  left: 10rpx;
  width: 80%;
  transform: translate(0, -120%);
  padding-left: 38px;
  text-indent: -38px;
}
.top .top_text .top_icon {
  font-size: 68rpx;
}
.bg1 {
  border: solid 1px #f3f3f3;
  width: 750rpx;
  height: 750rpx;
  border-radius: 50%;
  position: absolute;
  top: 34%;
  transform: translate(-36%);
}
.bg2 {
  border: solid 1px #f3f3f3;
  width: 550rpx;
  height: 550rpx;
  border-radius: 50%;
