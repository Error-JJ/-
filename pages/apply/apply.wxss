page {
  background: linear-gradient(#fff8ed, #ffd27d);
}
.top {
  width: 100%;
  height: 130rpx;
  overflow: hidden;
  position: fixed;
  z-index: 1;
}
.top .top_img {
  position: relative;
  top: -180rpx;
  width: 100%;
  height: 1000rpx;
}
.top .title {
  font-size: 20px;
  color: white;
  position: fixed;
  left: 45%;
  top: 4%;
}
.top .top_back {
  position: fixed;
  left: 3%;
  top: 5%;
  color: #fff;
}
.middle {
  position: fixed;
  top: 450rpx;
  width: 100%;
  height: 300rpx;
  z-index: 2;
}
.middle .middle_input {
  padding: 10rpx;
  position: absolute;
  width: 100%;
  height: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  box-sizing: border-box;
  border-top: solid 1px #888888;
  border-bottom: solid 1px #888888;
  background-color: #fff;
}
.middle .input_btn {
  position: relative;
  top: 230rpx;
  left: 50%;
  transform: translateX(-50%);
  display: inline-block;
  line-height: 1;
  white-space: nowrap;
  cursor: pointer;
  background: #fff;
  border: 1px solid #dcdfe6;
  color: #606266;
  -webkit-appearance: none;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  margin: 0;
  transition: 0.1s;
  font-weight: 500;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  padding: 12px 20px;
  font-size: 34rpx;
  border-radius: 4px;
  color: #fff;
  background-color: #ff4646;
  border-color: #ff4646;
  height: 80rpx;
  width: 625rpx ;
}
.right {
  top: 150rpx;
  height: 830rpx;
  width: 600rpx;
  left: 110rpx;
  position: fixed;
}
.right .text_place {
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.right .text_place .text {
  position: relative;
  top: 30%;
}
.left {
  top: 200rpx;
  height: 750rpx;
  width: 100rpx;
  position: fixed;
}
.left .left1 {
  width: 100%;
  height: 170rpx;
}
.left .left1 .circle {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background-color: #888888;
  border-radius: 50%;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1;
}
.left .left1 .line {
  position: relative;
  width: 5rpx;
  height: 130rpx;
  background-color: #888888;
  left: 50%;
  top: 40rpx;
  transform: translateX(-50%);
}
.left .left1 .suer {
  background-color: #ff4646;
}
