page {
  background: linear-gradient(#fff8ed, #ffd27d);
}
.top {
  top: 0;
  width: 100%;
  height: 130rpx;
  overflow: hidden;
  position: fixed;
  z-index: 1;
}
.top .top_img {
  position: relative;
  top: -180rpx;
  width: 100%;
  height: 1000rpx;
}
.top .title {
  font-size: 20px;
  color: white;
  position: fixed;
  left: 45%;
  top: 4%;
}
.top .top_back {
  position: fixed;
  left: 3%;
  top: 5%;
  color: #fff;
}
.place {
  width: 100%;
  position: absolute;
  margin-top: 130rpx;
  height: 1204rpx;
}
.place .repair_place {
  border-bottom: none 1px rgba(124, 124, 124, 0.801);
  width: 90%;
  position: relative;
  left: 50%;
  transform: translate(-50%);
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.place .repair_place .repair_place2 {
  position: relative;
  border-radius: 1%;
  border: 1px solid #ffffff;
  padding: 10px;
  box-shadow: 5px 8px 7px 0px #92744d;
  background-color: rgba(255, 255, 255, 0.5);
}
.place .repair_place .repair_place2 .repair_title {
  position: relative;
  border-bottom: solid 1px #252525;
  font-weight: 600;
  font-size: 40rpx;
  padding-bottom: 10rpx ;
}
.place .repair_place .repair_place2 .repair_title .repair_date {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-75%);
  font-size: 28rpx;
  display: inline-block;
  font-weight: 500;
  color: #888888;
}
.place .repair_place .repair_place2 .repair_mes {
  position: relative;
  padding-top: 5px;
  word-break: break-all;
  word-wrap: break-word;
  font-size: 32rpx;
}
.place .repair_place .repair_place2 .repair_mes .mes2 {
  position: absolute;
  left: 50%;
}
.place .repair_place .repair_place2 .color1 {
  color: #00a2ff;
}
.place .repair_place .repair_place2 .color2 {
  color: #ffae00;
}
.place .repair_place .repair_place2 .color3 {
  color: #06b300;
}
.go_top {
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(0, 0, 0, 0.664);
  position: fixed;
  top: 87%;
  right: 5%;
  border-radius: 50%;
  text-align: center;
}
.go_top .to_top_icon {
  color: #fff;
  position: absolute;
  top: 50%;
  font-size: 50rpx;
  transform: translate(-50%, -50%);
}
