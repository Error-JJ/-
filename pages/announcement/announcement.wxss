page {
  overflow: hidden;
  background: linear-gradient(#fff8ed, #ffd27d);
}
.top {
  width: 100%;
  height: 130rpx;
  overflow: hidden;
  position: fixed;
  z-index: 1;
}
.top .top_img {
  position: relative;
  top: -180rpx;
  width: 100%;
  height: 1000rpx;
}
.top .title {
  font-size: 20px;
  color: white;
  position: fixed;
  left: 45%;
  top: 4%;
}
.top .top_back {
  position: fixed;
  left: 3%;
  top: 5%;
  color: #fff;
}
.placard {
  position: absolute;
  top: 131rpx;
  width: 100%;
  height: 1200rpx;
}
.placard .placard_one {
  width: 100%;
  left: 50%;
  position: relative;
  transform: translate(-50%);
  padding: 35rpx;
  padding-bottom: 15rpx;
  border-bottom: solid 1rpx #888888;
  box-sizing: border-box;
}
.placard .placard_one .placard_icon_place {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
  border-radius: 7%;
  overflow: hidden;
  background-color: #ff4646;
}
.placard .placard_one .placard_icon_place .placard_icon {
  position: absolute;
  font-size: 35rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
}
.placard .placard_one .placard_title {
  position: relative;
  margin-left: 80rpx;
  font-size: 40rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.placard .placard_one .placard_message_place {
  margin-top: 20rpx;
  position: relative;
  margin-left: 80rpx;
}
.placard .placard_one .placard_message_place .placard_message {
  font-size: 30rpx;
  letter-spacing: 1rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.placard .placard_one .placard_date {
  width: 100%;
  display: inline-block;
  font-size: 28rpx;
  text-align: right;
  margin-right: 30rpx;
}
.go_top {
  width: 90rpx;
  height: 90rpx;
  background-color: rgba(0, 0, 0, 0.664);
  position: fixed;
  top: 87%;
  right: 5%;
  border-radius: 50%;
  text-align: center;
}
.go_top .to_top_icon {
  color: #fff;
  position: absolute;
  top: 50%;
  font-size: 50rpx;
  transform: translate(-50%, -50%);
}
