.input_place {
  border: none;
  width: 80%;
  height: 40vh;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.input_place .name {
  border-bottom: solid 1px rgba(0, 0, 0, 0.514);
  padding-bottom: 10px;
  margin-bottom: 20px;
}
.input_place .name .name-icon {
  display: inline-block;
  font-size: 23px;
}
.input_place .name .name_input {
  margin-left: 10px;
  padding-left: 10px ;
  display: inline-block;
  vertical-align: bottom;
}
.input_place .id {
  border-bottom: solid 1px rgba(0, 0, 0, 0.514);
  padding-bottom: 10px;
  margin-bottom: 20px;
}
.input_place .id .id-icon {
  display: inline-block;
  font-size: 23px;
}
.input_place .id .id_input {
  margin-left: 2px;
  padding-left: 10px ;
  display: inline-block;
  vertical-align: bottom;
}
.input_place .room {
  border-bottom: solid 1px rgba(0, 0, 0, 0.514);
  padding-bottom: 10px;
  margin-bottom: 20px;
}
.input_place .room .room-icon {
  display: inline-block;
  font-size: 25px;
}
.input_place .room .room_input {
  margin-left: 10px;
  padding-left: 10px ;
  display: inline-block;
  vertical-align: bottom;
}
.identity_btn {
  height: 40px;
  width: 80px;
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translate(-50%, -50%);
}
